@model IEnumerable<HotelBooking.Models.BookingViewModel>
@{
    ViewBag.Title = "BookingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-12">
                <h2>Booking List</b></h2>
            </div>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>InvoiceNumber</th>
                <th>HotelName</th>
                <th>FromDate</th>
                <th>ToDate</th>
                <th>Adult</th>
                <th>Children</th>
                <th>BuyingPrice</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.InvoiceNumber
                </td>
                <td>
                    @item.HotelName
                </td>
                <td>
                    @item.FromDate
                </td>
                <td>
                    @item.ToDate
                </td>
                <td>
                    @item.Adult
                </td>
                <td>
                    @item.Children
                </td>
                <td>
                    @item.BuyingPrice  @item.BuyingCurrency
                </td>
            </tr>
            }
        </tbody>
    </table>
  